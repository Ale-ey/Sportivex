							"mode": "raw",
							"raw": "{\n    \"qrCode\": \"GYM_ENTRY_EXIT\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/gym/scan-qr",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"gym",
								"scan-qr"
							]
						}
					},
					"response": []
				},
