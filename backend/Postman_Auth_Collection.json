				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"john.doe@nust.edu.pk\",\n    \"password\": \"securePassword123\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
